// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Change to your preferred database: mysql, sqlite, etc.
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  pdfs      PDF[]
  sessions  Session[]
}

model PDF {
  id            String   @id @default(cuid())
  userId        String
  fileName      String
  fileSize      Int
  fileUrl       String
  extractedText String   @db.Text
  topics        Json     // Array of topics
  concepts      Json     // Array of concepts
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessions Session[]

  @@index([userId])
}

model Session {
  id             String   @id @default(cuid())
  userId         String
  pdfId          String
  difficulty     Int      // 1-4 difficulty level
  currentQuestion Int?    // Current question number
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  pdf      PDF       @relation(fields: [pdfId], references: [id], onDelete: Cascade)
  messages Message[]
  progress Progress?

  @@index([userId])
  @@index([pdfId])
}

model Message {
  id        String   @id @default(cuid())
  sessionId String
  type      String   // 'ai-question', 'user-answer', 'ai-explanation', 'intro'
  content   String   @db.Text
  createdAt DateTime @default(now())

  // Relations
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}

model Progress {
  id             String   @id @default(cuid())
  sessionId      String   @unique
  questionsAsked Int      @default(0)
  correctAnswers Int      @default(0)
  hintsUsed      Int      @default(0)
  thinkingScore  Float?   // Score based on quality of answers
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}
